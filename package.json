{
  "name": "hrv-research-software",
  "version": "1.0.0",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron .",
    "build:py": "pyinstaller --onefile --noconsole --distpath ./dist_python src/engine/main.py",
    "build:electron": "electron-builder",
    "dist": "npm run build:py && electron-builder"
  },
  "build": {
    "appId": "com.williamma.hrvtracker",
    "productName": "Live HRV Tracker",
    "directories": {
      "output": "dist_electron"
    }
  },
  "files": [
    "src/backend/**/*",
    "src/electron/**/*",
    "src/static/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "dist/app.exe",
      "to": "backend/main.exe"
    }
  ],
  "win": {
    "target": "portable",
    "requestedExecutionLevel": "requireAdministrator"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/williamma621/HRV-Research-Software.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/williamma621/HRV-Research-Software/issues"
  },
  "homepage": "https://github.com/williamma621/HRV-Research-Software#readme",
  "description": "",
  "devDependencies": {
    "electron": "^23.3.13",
    "electron-builder": "^24.9.1"
  }
}
